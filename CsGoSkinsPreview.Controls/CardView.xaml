<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CsGoSkinsPreview.Controls.CardView">
    <Frame BackgroundColor="White" HasShadow="True" HorizontalOptions="CenterAndExpand"
           CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Image Source="{Binding SkinImageSource}"/>
            <Frame BorderColor="{Binding SkinRarityColor}" Padding="0, 8, 0, 0" Grid.Row="1">
                <StackLayout Grid.Row="1" Orientation="Vertical">
                    <Label Text="{Binding SkinName}" HorizontalOptions="CenterAndExpand" FontSize="Header" />
                    <Label Text="{Binding SkinPrice}" HorizontalOptions="CenterAndExpand" FontSize="Subtitle" />
                </StackLayout>
            </Frame>
        </Grid>
    </Frame>
</ContentView>